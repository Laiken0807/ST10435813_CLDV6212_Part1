@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background: linear-gradient(to bottom, #e0f2f1, #eeeeee); /* teal to light grey */
        min-height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .sidebar {
        width: 220px;
        padding: 20px;
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        background-color: #008080; /* teal */
        display: flex;
        flex-direction: column;
        align-items: start;
    }

        .sidebar img {
            width: 180px;
            margin-bottom: 30px;
        }

        .sidebar a {
            display: block;
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            background-color: #ffffff; /* all buttons same color */
            color: #008080; /* text color */
            text-decoration: none;
            font-weight: bold;
            border-radius: 4px;
            text-align: center;
        }

            .sidebar a:hover {
                background-color: #ffffff; /* remove hover effect */
                color: #008080;
            }

    .main-content {
        margin-left: 240px; /* space for sidebar */
        padding: 40px;
    }
</style>

<div class="sidebar">
    <!-- Logo -->
    <img src="~/images/1.png" alt="LK Cosmetics Logo" />

    <!-- Buttons -->
    <a asp-controller="Customers" asp-action="Index">Customers</a>
    <a asp-controller="Orders" asp-action="Index">Orders</a>
    <a asp-controller="Products" asp-action="Index">Products</a>
</div>

<div class="main-content">
    <h1>Welcome to LK Cosmetics</h1>
    <p>Use the menu on the left to navigate through Customers, Orders, and Products.</p>
</div>
